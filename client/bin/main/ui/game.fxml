<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane style="-fx-background-color: #2A3B57;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.duke.ece651.team14.client.controller.GameController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <BorderPane>
         <left>
            <AnchorPane prefHeight="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="29.0" text="RISC" textFill="WHITE">
                     <font>
                        <Font size="35.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
                  <Label layoutX="29.0" layoutY="53.0" text="really interesting strategic conquest" textFill="WHITE" />
               </children>
            </AnchorPane>
         </left>
         <right>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label text="exit the game" textAlignment="CENTER" textFill="WHITE">
                     <padding>
                        <Insets right="60.0" />
                     </padding>
                  </Label>
                  <Label fx:id="howToPlay" onMouseClicked="#onHowToPlay" text="how to play" textFill="WHITE">
                     <padding>
                        <Insets right="50.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
         </right>
      </BorderPane>
      <GridPane alignment="CENTER" style="-fx-background-color: white;" GridPane.rowIndex="2">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TitledPane animated="false" text="Map">
               <content>
                  <fx:include fx:id = "gui" source="map.fxml" />
               </content>
            </TitledPane>
            <GridPane prefWidth="602.0" GridPane.columnIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab text="Territory Stats">
                           <content>
                              <Pane>
                                 <children>
                                    <TextArea fx:id="territoryStatsText" layoutY="-2.0" prefHeight="226.0" prefWidth="602.0" text="The Label component, on the other hand, is used to display user-readable text that can be styled with basic formatting such as bold or italic, but is not suitable for complex layouts or rich text. A Label has an explicit size and layout on its own, so it can be used as a standalone component or within a layout container." wrapText="true" />
                                 </children>
                              </Pane>
                           </content>
                      </Tab>
                      <Tab text="User Stats">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                        </content>
                      </Tab>
                    </tabs>
                  </TabPane>
                  <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" GridPane.rowIndex="1">
                    <tabs>
                      <Tab text="Game Log">
                           <content>
                              <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: black;">
                                 <children>
                                    <TextArea fx:id="gameLogText" editable="false" prefHeight="224.0" prefWidth="602.0" styleClass="text-area" stylesheets="@gameLog.css" text="The Label component, on the other hand, is used to display user-readable text that can be styled with basic formatting such as bold or italic, but is not suitable for complex layouts or rich text. A Label has an explicit size and layout on its own, so it can be used as a standalone component or within a layout container." wrapText="true">
                                       <font>
                                          <Font name="Courier New" size="15.0" />
                                       </font>
                                    </TextArea>
                                 </children>
                              </Pane>
                           </content>
                      </Tab>
                    </tabs>
                  </TabPane>
               </children>
            </GridPane>
         </children>
      </GridPane>
      <fx:include fx:id = "inputButtons" source="turnButtons.fxml" GridPane.rowIndex="3" />
   </children>
</GridPane>
