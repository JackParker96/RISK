            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-border-color: #7A1B1B; -fx-border-width: 4; -fx-border-radius: 10;" text="Finish Turn" textFill="#7a1b1b" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" style="-fx-background-color: #7A1B1B; -fx-background-radius: 10;" text="Research" textFill="WHITE" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
